<Window x:Class="InformationSecurity.MainProgram"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InformationSecurity"
        mc:Ignorable="d"
        Title="InformationSecurity" Height="450" Width="534">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="resources/Bitmap2.bmp"/>
        </Grid.Background>
        <Label x:Name="label1" Content="Login" HorizontalAlignment="Left" Height="37" Margin="10,40,0,0" VerticalAlignment="Top" Width="155" FontFamily="Franklin Gothic Medium" FontSize="16" FontWeight="Bold" Background="#FFBFB8DA"/>
        <Label x:Name="label2" Content="00:00:00" HorizontalAlignment="Left" Height="25" Margin="10,77,0,0" VerticalAlignment="Top" Width="72" FontStyle="Italic" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Franklin Gothic Medium" Background="#FFBFB8DA"/>
        <PasswordBox x:Name="passBox1" HorizontalAlignment="Left" Height="36" Margin="196,181,0,0" VerticalAlignment="Top" Width="156" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="button1" Content="Change password" HorizontalAlignment="Left" Height="28" Margin="196,233,0,0" VerticalAlignment="Top" Width="156" Background="#FF7F67AA" FontFamily="Franklin Gothic Medium" FontSize="16" Click="button1_Click"/>
        <Button x:Name="button2" Content="Back" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" VerticalAlignment="Top" Width="58" Click="button2_Click" Background="#FF7F67AA" FontFamily="Franklin Gothic Medium" FontSize="16"/>

    </Grid>
</Window>
